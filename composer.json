{
    "name": "is-smcleod/oauth2-basecamp",
    "description": "Basecamp OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
    "authors": [
        {
            "name": "Scott Mcleod",
            "email": "smcleod@infostructure.biz",
            "homepage": "http://infostructure.net"
        }
    ],
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "authorization",
        "authentication",
        "basecamp"
    ],
    "minimum-stability": "beta",
    "require": {
        "league/oauth2-client": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "mockery/mockery": "~0.9",
        "squizlabs/php_codesniffer": "~2.0"
    },
    "autoload": {
        "psr-4": {
            "League\\OAuth2\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "League\\OAuth2\\Client\\Test\\": "tests/src/"
        }
    }
}
